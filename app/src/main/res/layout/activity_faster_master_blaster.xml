<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/resistText"
            android:text="@string/resistanceNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
        <EditText
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/resistText"
            android:id="@+id/resistanceNumber"
            android:inputType="numberDecimal"
            android:layout_height="wrap_content"
            android:layout_width="80dp"/>


        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/resistanceNumber"
            android:text="@string/getFirstTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stopText" />

    <LinearLayout
        android:id="@+id/stop1and2"
        android:layout_below="@id/stopText"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

            <EditText
                android:id="@+id/stop1"
                android:inputType="number"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <EditText
                android:id="@+id/stop2"
                android:inputType="number"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
    </LinearLayout>
        <TextView
            android:layout_below="@id/stop1and2"
            android:layout_centerHorizontal="true"
            android:text="@string/widthPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/widthPicker"
        android:orientation="horizontal"
        android:layout_below="@id/stop1and2"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:state_enabled="false"
        android:paddingTop="20dp">
        <RadioGroup
            android:id="@+id/pickWidth"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/num3one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/num3two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </LinearLayout>
        <TextView
            android:layout_below="@+id/widthPicker"
            android:layout_centerHorizontal="true"
            android:id="@+id/num1"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:layout_below="@+id/num1"
            android:layout_centerHorizontal="true"
            android:id="@+id/num2"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:layout_below="@+id/num2"
            android:layout_centerHorizontal="true"
            android:id="@+id/num3"
            android:layout_width="30dp"
            android:layout_height="30dp"/>


        <TextView
            android:layout_below="@+id/num3"
            android:layout_centerHorizontal="true"
            android:id="@+id/num4"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:layout_below="@+id/num4"
            android:layout_centerHorizontal="true"
            android:id="@+id/num5"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:layout_below="@+id/num5"
            android:layout_centerHorizontal="true"
            android:id="@+id/num6"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:layout_below="@+id/num6"
            android:layout_centerHorizontal="true"
            android:id="@+id/num7"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:layout_below="@+id/num7"
            android:layout_centerHorizontal="true"
            android:id="@+id/num8"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    <TextView
        android:layout_toLeftOf="@+id/num1"
        android:layout_alignBottom="@+id/num1"
        android:id="@+id/firstNum"
        android:layout_height="30dp"
        android:layout_width="30dp"/>


        <TextView
            android:layout_toRightOf="@+id/num1"
            android:layout_alignBottom="@+id/num1"
            android:id="@+id/lastNum"
            android:layout_height="30dp"
            android:layout_width="30dp"/>



</RelativeLayout>
